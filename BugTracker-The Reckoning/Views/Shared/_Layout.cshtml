<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale 1.0" />
    <title>@ViewBag.Title - BugTracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using Microsoft.AspNet.Identity

    <meta name="description" content="BugTracker" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/img/bugtracker-icon.png" class="navbar-brand" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Projects")</li>

                        <li class="dropdown" id="Users">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tickets<strong class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Tickets", "Index", "Tickets")</li>
                                @*<li>@Html.ActionLink("Ticket Attachments", "Index", "TicketAttachments")</li>
                        <li>@Html.ActionLink("Ticket Histories", "Index", "TicketHistories")</li>
                        <li>@Html.ActionLink("Ticket Comments", "Index", "TicketComments")</li>
                        <li>@Html.ActionLink("Ticket Statuses", "Index", "TicketStatus")</li>*@
                                <li>@Html.ActionLink("Ticket Priorities", "Index", "TicketPriorities")</li>
                                <li>@Html.ActionLink("Ticket Types", "Index", "TicketTypes")</li>
                            </ul>
                        </li>
                        if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
                        {                           
                            <li>@Html.ActionLink("Users", "Index", "ApplicationUsers")</li>
                        }
                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BugTracker</p>
        </footer>
    </div>


</body>
</html>