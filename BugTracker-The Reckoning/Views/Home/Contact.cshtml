@{
    ViewBag.Title = "Contact BugTracker";
}

<div class="container" style="padding-top:30px">
    <div class="row">
        <div class="col-xs-11" style="text-align:center">
            <h1>@ViewBag.Title.</h1>
            <h2>@ViewBag.Message</h2>
        </div>
        <div class="col-sm-4 column">
            <address>
                BugTracker<br />
                1231 Shields Road Suite 5<br />
                Kernersville, NC 27284<br /><br />
                Phone:  336.701.1957
            </address>
        </div>

        <form class="content-panel" action="@Url.Action("Contact", "Home")" method="post" name="ContactsForm">
            <div class="col-sm-4 column">
                @*SendGrid Form for Emails*@
                <h3 class="">Send us a note:</h3>

                <div class="form-group">
                    <input id="name" name="name" type="text" class="input-block-level footer-input" placeholder="Your name">
                </div>
                <div class="form-group">
                    <input id="subject" name="subject" type="text" class="input-block-level footer-input" placeholder="Subject">
                </div>
                <div class="form-group">
                    <input id="email" name="email" type="email" class="input-block-level footer-input" placeholder="Your email address">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group"style="padding-top:20px">
                    <textarea id="message" name="message" class="input-block-level footer-input textarea-email" placeholder="Your message to us" rows="8"></textarea>
                </div>
                <div class="form-group">
                    <button id="contact-submit" type="submit" class="btn btn-default btn-primary btn-large">Send</button>
                </div>
            </div>
        </form>
    </div>
</div>