@model PagedList.IPagedList<BugTracker_The_Reckoning.Models.TicketStatus>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Ticket Statuses";
}
<h2>Ticket Statuses</h2>
<p>
    @Html.ActionLink("New Status", "Create")
</p>
<div class="col-md-12 column">
    <div class="row clearfix">
        <div class="col-md-12">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                    </th>
                    <th></th>
                </tr>
            </table>
                @foreach (var item in Model)
                {
                string theHref = "../TicketStatuses/Edit/" + item.Id;
                <div class="row">
                    <div class="col-xs-12">
                        <span title="Edit Type"><em>@Html.ActionLink(@item.Name, theHref, "TicketStatus", new { @class = "btn btn-primary tps", style = "width:100%; margin-bottom:4px;" })</em></span>
                    </div>
                </div>
                }
            
            </div>
        </div>
    </div>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.sortOrder }))

